---
import { getLangFromUrl, useTranslatedPath, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
const t = useTranslations(lang);
---
<div class="pb-12">
      <div class="relative">
        <div class="mx-auto max-w-7xl">
          <div class="relative z-10 lg:w-full lg:max-w-2xl pt-32">
            <svg
              class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-custom lg:block"
              viewBox="0 0 100 100"
              preserveAspectRatio="none"
              aria-hidden="true"
            >
              <polygon points="0,0 90,0 50,100 0,100" />
            </svg>

<div class="relative px-6 py-16 sm:py-16 lg:px-8 lg:py-16 lg:pr-0">
  <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
    {/* Video background for the h1 tag */}
    <div class="mt-9 lg:hidden block absolute inset-0">
      <video
        class="aspect-[3/2] object-cover h-72 w-full"
        loop
        autoplay
        muted
        playsinline
        src='/DiamondHead.mp4'
      />
    </div>
        {/* h1 Tag */}
    <div class="relative z-10 pt-28 pb-0 lg:pt-1">
      <h1 class="text-center lg:text-start tracking-wider text-4xl font-thin tracking-tight text-white lg:text-gray-900 sm:text-5xl">
        {t('hero.header')}
      </h1>
    </div>

    {/* Rest of the content, positioned below the video */}
    <div class="pt-12 lg:pt-6 pb-0 relative z-10 mt-16 md:mt-12 lg:mt-0">
      <p class="mt-6 text-lg leading-8 text-gray-600">
        {t('hero.description')}
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        {t('hero.description2')}
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        {t('hero.description3')}
      </p>
      <div class="mt-10 flex items-center gap-x-6">
        <a
          href={translatePath('/contact')}
          class="rounded-md bg-blue-400 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        >
          {t('hero.contact')}
        </a>
        <a
          href={translatePath('/team')}
          class="text-sm font-semibold leading-6 text-gray-900"
        >
          {t('hero.meetTutor')} <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>
  </div>
</div>

